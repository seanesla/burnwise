# Backend Environment Configuration
NODE_ENV=development
PORT=5001
LOG_LEVEL=info

# Demo Mode - MUST BE false IN PRODUCTION!
DEMO_MODE=false

# JWT Configuration - GENERATE SECURE SECRETS!
# Generate with: openssl rand -hex 32
JWT_SECRET=your-secure-jwt-secret-here-change-this
JWT_ISSUER=burnwise-api
JWT_AUDIENCE=burnwise-client

# TiDB Connection - Replace with your credentials
TIDB_HOST=your-tidb-host.aws.tidbcloud.com
TIDB_PORT=4000
TIDB_USER=your-tidb-username
TIDB_PASSWORD=your-secure-tidb-password
TIDB_DATABASE=your-database-name

# OpenWeatherMap API - Get key from https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=your-openweather-api-key

# Twilio Configuration (optional for SMS alerts)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# OpenAI API (optional for embeddings)
OPENAI_API_KEY=your-openai-api-key