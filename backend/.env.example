# BURNWISE Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env with real credentials!

# TiDB Connection (Get from TiDB Cloud Console)
TIDB_HOST=your-cluster.prod.aws.tidbcloud.com
TIDB_USER=your-username.root
TIDB_PASSWORD=your-secure-password-here
TIDB_DATABASE=burnwise
TIDB_PORT=4000

# Weather API (Get from OpenWeatherMap.org)
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key-here

# SMS Alerts (Optional - Get from Twilio Console)
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# AI Embeddings (Optional - Get from OpenAI Platform)
OPENAI_API_KEY=sk-proj-your-openai-key-here

# JWT Secret (Generate a random string)
JWT_SECRET=generate-a-long-random-string-here
JWT_REFRESH_SECRET=another-long-random-string-here

# Server Configuration
PORT=5001
NODE_ENV=development

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info