  "author": "BURNWISE Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "mysql2": "^3.14.3",
    "socket.io": "^4.8.1",
    "axios": "^1.11.0",
    "twilio": "^4.23.0",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^17.2.1",
    "lodash": "^4.17.21",
    "mathjs": "^12.2.1",
    "ml-matrix": "^6.10.7",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "redis": "^4.6.10"
